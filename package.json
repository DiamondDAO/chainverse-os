{
  "version": "0.1.12",
  "license": "MIT",
  "name": "@chainverse/os",
  "repository": {
    "url": "git://github.com/DiamondDAO/chainverse-os.git"
  },
  "author": "Jose Zena Zamora",
  "main": "dist/index.js",
  "source": "src/index.tsx",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "parcel ./playground/index.html",
    "start2": "tsdx watch",
    "build": "tsdx build && yarn build-tailwind",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build && yarn build-tailwind",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -i ./tailwind.css -o ./dist/chainverse-os.css --minify"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/chainverse-os.esm.js",
  "size-limit": [
    {
      "path": "dist/chainverse-os.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/chainverse-os.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@chainverse/os": "^0.1.10",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^17.0.37",
    "autoprefixer": "^10.4.7",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "parcel": "^2.0.1",
    "postcss": "^8.4.14",
    "postcss-custom-properties": "^12.1.8",
    "postcss-url": "^10.1.3",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-json-view": "^1.21.3",
    "size-limit": "^7.0.8",
    "tailwindcss": "^3.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@heroicons/react": "^1.0.5",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "axios": "^0.27.2",
    "clsx": "^1.1.1",
    "fuse.js": "^6.5.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
